@inherits PageBase

<h4>New Location</h4>

<EditForm Model="@newLocation" OnValidSubmit="@AddLocation">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="row">
        <div class="col-2">
            <label for="name">Location Name</label>
            <InputText id="name" @bind-Value="newLocation.Name" class="form-control" />
        </div>
        <div class="col-2">
            <label for="address">Address</label>
            <InputText id="address" @bind-Value="newLocation.Address" class="form-control" />
        </div>
        <div class="col-1 align-self-end">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</EditForm>
